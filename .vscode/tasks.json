{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "typescript",
      "identifier": "build-server",
      "label": "Build Server",
      "tsconfig": "server\\tsconfig.json",
      "problemMatcher": [
        "$tsc"
      ],
      "group": "build"
    },
    {
      "type": "shell",
      "command": "npm run build",
      "label": "Build Full Client",
      "options": {
        "cwd": "${workspaceRoot}/client"
      },
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "type": "shell",
      "command": "npm run build-part",
      "label": "Build Client",
      "options": {
        "cwd": "${workspaceRoot}/client"
      },
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}